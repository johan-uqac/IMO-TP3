<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/microsoft"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:src="@drawable/microsoft"
            android:layout_marginBottom="10sp"
            android:contentDescription="@string/microsoft"
            android:onClick="onIconPressed"/>
        <ImageView
            android:id="@+id/apple"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:src="@drawable/apple"
            android:layout_marginBottom="10sp"
            android:contentDescription="@string/apple"
            android:onClick="onIconPressed"/>
        <ImageView
            android:id="@+id/facebook"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:src="@drawable/facebook"
            android:layout_marginBottom="10sp"
            android:contentDescription="@string/facebook"
            android:onClick="onIconPressed"/>
        <ImageView
            android:id="@+id/amazon"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:src="@drawable/amazon"
            android:layout_marginBottom="10sp"
            android:contentDescription="@string/amazon"
            android:onClick="onIconPressed"/>
        <ImageView
            android:id="@+id/google"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:src="@drawable/google"
            android:layout_marginBottom="10sp"
            android:contentDescription="@string/google"
            android:onClick="onIconPressed"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
